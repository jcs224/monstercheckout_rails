<h1 class="page-header">Users</h1>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <table class="table table-striped">
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= gravatar_for(user, 50) %></td>
            <td>
              <div class="profile-info">
                <h4><%= user.name %> 
                  <% if user.is_admin? %> <i class="fa fa-rocket" title='Administrator access'></i><% end %>
                </h4>                  
                <!-- TODO: Add icon for monitor access if not admin -->
                
                <h5>
                  <a href="mailto:<%= user.email %>"><%= user.email %></a>
                </h5>
              </div>
            </td>
            <td>
              <%= link_to edit_user_path(user), class: 'btn btn-large' do %> <i class="fa fa-pencil"></i> Edit <% end %>
              <%= link_to user, class: 'btn btn-large', method: :delete, data: { confirm: 'Are you sure?' } do %> <i class="fa fa-trash-o"></i> Delete <% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to new_user_path, class: 'btn btn-large btn-primary' do %>
      <i class="fa fa-plus"></i> New User
    <% end %>
  </div>
</div>

<br>


