<h1>Listing reservations</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>In time</th>
      <th>Out time</th>
      <th>Checked out time</th>
      <th>Checked in time</th>
      <th>Is approved</th>
      <th>Check out comments</th>
      <th>Check in comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.project %></td>
        <td><%= reservation.in_time %></td>
        <td><%= reservation.out_time %></td>
        <td><%= reservation.checked_out_time %></td>
        <td><%= reservation.checked_in_time %></td>
        <td><%= reservation.is_approved %></td>
        <td><%= reservation.check_out_comments %></td>
        <td><%= reservation.check_in_comments %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path %>
