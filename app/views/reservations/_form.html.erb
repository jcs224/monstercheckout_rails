<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <%= form_for(@reservation) do |f| %>
      <% if @reservation.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@reservation.errors.count, 'error') %> prohibited this reservation from being saved:</h2>
    
          <ul>
          <% @reservation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <%= f.hidden_field :user_id, value: current_user.id %>
    
      <div class="field">
        <%= f.label :project %><br>
        <%= f.text_field :project, class: 'form-control' %>
      </div>
      <div class="field">
        <div class="row">
          <div class="col-sm-6">
              <%= f.label :out_time %>
              <div class='input-group'>
                  <input type='text' name='reservation[out_time]' value="<%= @reservation.out_time.strftime('%m/%d/%Y %l:%m %p') if @reservation.out_time %>" class="form-control" id='reservation_out_time'/>
                  <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
          </div>
          <div class="col-sm-6">
            <%= f.label :in_time %>
              <div class="form-group">
                  <div class='input-group'>
                      <input type='text' name='reservation[in_time]' value="<%= @reservation.in_time.strftime('%m/%d/%Y %l:%m %p') if @reservation.in_time %>" class="form-control"  id='reservation_in_time'/>
                      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                      </span>
                  </div>
              </div>
          </div>
          <div class="col-sm-1"></div>
        </div>
    </div>
    <%= hidden_field_tag 'datetime_format', '%m/%d/%y %l:%m %p' %>
      <div class="field">
        <%= f.label :equipment %>
    
        <ul class="equipment-list">
          <!-- TODO: Filter this to only equipment that's allowed -->
          <% @equipment.each do |equipment| %>
              <li>
                <%= check_box_tag 'reservation[equipment_ids][]', equipment.id, @reservation.equipment.include?(equipment) %>
                <span class="equipment-choice-label" title='<%= equipment.description %>'><%= equipment.name %></span>
                <% if equipment.quantity > 1 %>
                  <span class="equipment-choice-label pull-right">Quantity:
                  <%= number_field_tag "reservation[quantity][#{equipment.id}]", get_previous_quantity(@reservation.id, equipment.id), min: 1, max: equipment.quantity, class: 'form-control quantity-box' %> / <%= equipment.quantity %></span>
                <% else %>
                  <%= hidden_field_tag "reservation[quantity][#{equipment.id}]", 1 %>
                <% end %>
              </li>
          <% end %>
        </ul>
        
      </div>
      <div class="actions">
        <%= f.submit class: 'btn btn-large btn-primary' %>
      </div>
    <% end %></div>
</div>

<script type="text/javascript">
    $(function () {
        $('#reservation_out_time').datetimepicker({
          defaultDate: "<%= @reservation.out_time.strftime('%m/%d/%Y %l:%m %p') if @reservation.out_time %>"
        });
        $('#reservation_in_time').datetimepicker({
          defaultDate: "<%= @reservation.in_time.strftime('%m/%d/%Y %l:%m %p') if @reservation.in_time %>",
          minDate: "<%= @reservation.out_time.strftime('%m/%d/%Y %l:%m %p') if @reservation.out_time %>"
        });
        $("#reservation_out_time").on("dp.change",function (e) {
           $('#reservation_in_time').data("DateTimePicker").setMinDate(e.date);
        });
        $("#reservation_in_time").on("dp.change",function (e) {
           $('#reservation_out_time').data("DateTimePicker").setMaxDate(e.date);
        });
    });
</script>