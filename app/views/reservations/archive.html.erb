<% provide(:title, 'Archive') %>

<h1 class="page-header">Archive</h1>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <button onclick="window.print()" class="btn btn-large btn-primary pull-right print-button">
      <i class="fa fa-print"></i> Print
    </button>

    <table class="table">
      <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
            <td><%= render 'shared/user_reservation', reservation: reservation %></td>
            <td>
              <h4>Equipment</h4>
              <ul class="equipment-archive-list">
              <% reservation.reservation_equipment.each do |item| %>
                <li><%= item.equipment.name %> <%= item.quantity if item.quantity > 1 %></li>
              <% end %>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>