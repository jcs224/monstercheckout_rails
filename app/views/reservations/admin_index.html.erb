<div ng-app="admin-reservation-index">
	<h1 class="page-header">Reservations</h1>
	
	<!-- TODO: Refactor these into separate widgets -->

	<div class="row" ng-controller="indexCtrl">
		<div class="col-sm-6">
			<%= render 'shared/user_reservation_list', reservations: @awaiting_approval, 
			title: 'Awaiting Approval', empty_text: 'There are no reservations that need approval' %>

			<%= render 'shared/icon_reservation_list', reservations: @user_reservations, title: 'Your Reservations' %>
		</div>
		<div class="col-sm-6">
			<div class="panel panel-default reservation-panel">
				<div class="panel-heading">
					<h3 class="panel-title">All Reservations</h3>
				</div>
				<% if @all_reservations.any? %>
				<ul class="list-group">
					<% @all_reservations.each do |reservation| %>
						<li class="list-group-item">
							<%= render 'shared/user_reservation', reservation: reservation %>
						</li>
					<% end %>
				</ul>
				<% else %>
					<div class="panel-body">
						<em>There are no reservations</em>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>