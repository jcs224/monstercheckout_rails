<header class="navbar navbar-default" role="navigation">
	<div class="container-fluid">
		<div class="navbar-header">
			<button class="navbar-toggle">
				<span class="sr-only">Toggle Navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<%= link_to "MONSTER Checkout" , root_path, id: "logo", class: "navbar-brand" %>
		</div>

		<div class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<% if signed_in? %>
					<li class="<%= 'active' if params[:controller] == 'reservations' %>">
						<%= link_to reservations_path do %>
							<i class="fa fa-calendar"></i> Reservations
						<% end %>
					</li>
				<% end %>
				<li class="<%= 'active' if params[:controller] == 'equipment' %>">
					<%= link_to equipment_index_path do %>
						<i class="fa fa-microphone"></i> Equipment
					<% end %>		
				</li>
				<% if signed_in? %>
					<!-- TODO: Check admin permissions to show this tab -->
					<li class="<%= 'active' if params[:controller] == 'users' %>">
						<%= link_to users_path do %>
							<i class="fa fa-users"></i> Users
						<% end %>		
					</li>

					<!-- TODO: Check monitor permissions to show this tab -->
					<li class="<%= 'active' if params[:controller] == 'monitor' %>">
						<%= link_to '#' do %>
							<i class="fa fa-key"></i> Monitor
						<% end %>		
					</li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<i class="fa fa-user"></i> <%= current_user.name %> <span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to current_user do %>
									<i class="fa fa-user"></i> Profile
								<% end %>
							</li>
							<li>
								<%= link_to edit_user_path(current_user) do %>
									<i class="fa fa-gear"></i> Settings
								<% end %>
							</li>
							<li class="divider"></li>
							<li>
								<%= link_to signout_path do %>
									<i class="fa fa-sign-out"></i> Sign out
								<% end %>
							</li>
						</ul>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</header>